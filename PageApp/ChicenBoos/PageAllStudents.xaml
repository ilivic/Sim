<Page x:Class="ShowAdd.PageApp.ChicenBoos.PageAllStudents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShowAdd.PageApp.ChicenBoos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAllStudents">

    <Grid>
        <StackPanel>
            <TextBlock Text="SelectGenderOrStat"/>
            <CheckBox/>
        </StackPanel>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding pathImageOrByteString}"/>
                        <TextBlock Text="{Binding InfoFo}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel>
            <TextBlock Text="Add New "/>
            <TextBlock Text="NameOrNamb"/>
            <TextBox/>
            <TextBlock Text="DateBirdOrInfo"/>
            <TextBox/>
            <Button Content="SelectImage"/>
        </StackPanel>
    </Grid>
</Page>
